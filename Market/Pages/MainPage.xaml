<Page x:Class="Market.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Market.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Width="200">
            <Button x:Name="Bt_Prod" Content="Product" Click="Bt_Prod_Click"/>
            <Button x:Name="Bt_Order" Content="Order" Click="Bt_Order_Click"/>
            <Button x:Name="Bt_Provider" Content="Provider" Click="Bt_Provider_Click"/>
            <Button x:Name="Bt_ProductType" Content="ProductType" Click="Bt_ProductType_Click"/>
        </StackPanel>
        <Frame Grid.Column="1" x:Name="My_Frame" NavigationUIVisibility="Hidden"/>
    </Grid>
</Page>

<Page x:Class="Market.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Market.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock HorizontalAlignment="Left" Margin="0  10 0 10" Text="Логин"  />
            <TextBox x:Name="LoginTb" HorizontalAlignment="Center" 
                     Width="136" FontSize="14" Height="21"/>

            <TextBlock Margin="0  10 0 10" HorizontalAlignment="Left" Text="Пароль"   FontSize="14" />
            <PasswordBox x:Name="Password" Margin="0  10 0 10" Height="20"/>

            <Button x:Name="AuthBtn" Content="Войти"  
                    HorizontalAlignment="Center"  Grid.Row="1"  
                    VerticalAlignment="Top" Width="138" Height="28"  
                    Click="AuthBtn_Click"/>
        </StackPanel>
    </Grid>
</Page>
